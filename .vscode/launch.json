{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch AMP with Debugger",
            "protocol": "inspector",
            "program": "${workspaceFolder}/amp/scripts/watch.js",
            "cwd": "${workspaceFolder}/amp",
            "outFiles": ["${workspaceFolder}/amp/build/*"],
            "autoAttachChildProcesses": true,
            "env": {
                "NODE_ENV": "debug"
            }
        }
    ]
}